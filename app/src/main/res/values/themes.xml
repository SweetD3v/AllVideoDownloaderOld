<resources>

    <style name="Theme.AllVidDownloader" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primarydark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MyProgressDialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:background">@drawable/rounded_bg_white_16</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="RatingBar" parent="Theme.AllVidDownloader">
        <item name="colorControlActivated">#4361AA</item>
        <item name="colorControlNormal">#799DF8</item>
    </style>

    <style name="TxtStyleLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TxtStyleMedium" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TxtStyleSmall" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="rtl_RecyclerTabLayout">
        <item name="rtl_tabBackground">?selectableItemBackground</item>
        <item name="rtl_tabIndicatorColor">?colorAccent</item>
        <item name="rtl_tabIndicatorHeight">2.0dip</item>
        <item name="rtl_tabMaxWidth">50.0dip</item>
        <item name="rtl_tabMinWidth">40.0dip</item>
        <item name="rtl_tabPaddingEnd">6.0dip</item>
        <item name="rtl_tabPaddingStart">6.0dip</item>
        <item name="rtl_tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="rtl_tabTextAppearance">@style/rtl_RecyclerTabLayout.Tab</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:background">@drawable/rounded_bg_white_8</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="RoundedCornersDialog80" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:background">@drawable/rounded_bg_white_8</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="rtl_RecyclerTabLayout.Tab" parent="@style/rtl_RecyclerTabLayout">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Downloader.DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RoundedTabLayoutStylePrimary" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector_primary</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_layout_bg</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/primary</item>
    </style>

    <style name="RoundedTabLayoutStyleAccent" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector_accent</item>
        <item name="tabIndicator">@null</item>
        <!--        <item name="android:background">@drawable/tab_layout_bg</item>-->
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="RoundedCornersImageView" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/up_slide</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide</item>
    </style>

    <style name="Icon">
        <item name="android:shadowColor">@color/black_translucent2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="PlayButton">
        <item name="android:src">@drawable/play</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="PauseButton">
        <item name="android:src">@drawable/pauseexo</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="RewindButton">
        <item name="android:src">@drawable/previos</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/exo_controls_rewind_description</item>
    </style>

    <style name="FastForwardButton">
        <item name="android:src">@drawable/nextvid</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/exo_controls_fastforward_description</item>
    </style>

    <style name="SeekBaStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20.0dip</item>
        <item name="android:layout_marginLeft">56.0dip</item>
        <item name="android:layout_marginRight">56.0dip</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar_drawable</item>
        <item name="android:thumb">@drawable/custom_thumb</item>
        <item name="android:splitTrack">false</item>
    </style>
</resources>