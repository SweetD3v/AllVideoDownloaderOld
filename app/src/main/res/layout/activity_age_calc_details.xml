<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tools.age_calc.AgeCalcDetailsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/topbar_common" />

    <LinearLayout
        android:id="@+id/llAgeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bannerContainer"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="8dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <FrameLayout
                        android:id="@+id/adFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gilroy_semibold"
                    android:paddingHorizontal="16dp"
                    android:text="@string/your_age"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/karla_regular"
                    android:paddingHorizontal="16dp"
                    android:text="@string/age_details_subtitle"
                    android:textColor="@color/text_unselected"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/cardColorAge"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clYear1"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titleYear1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/cardColorAge"
                                android:fontFamily="@font/gilroy_semibold"
                                android:paddingHorizontal="4dp"
                                android:text="Year"
                                android:textColor="@color/blue"
                                android:textSize="10sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/v3"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                app:layout_constraintBottom_toBottomOf="@id/titleYear1"
                                app:layout_constraintEnd_toEndOf="@id/titleYear1"
                                app:layout_constraintStart_toStartOf="@id/titleYear1"
                                app:layout_constraintTop_toTopOf="@id/titleYear1" />

                            <TextView
                                android:id="@+id/txtYearsVal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/rounded_bg_stroke_4"
                                android:elevation="-1dp"
                                android:fontFamily="@font/gilroy_semibold"
                                android:gravity="center"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/v3" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clMonth1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titleMonth1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/cardColorAge"
                                android:fontFamily="@font/gilroy_semibold"
                                android:paddingHorizontal="4dp"
                                android:text="Month"
                                android:textColor="@color/blue"
                                android:textSize="10sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/v2"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                app:layout_constraintBottom_toBottomOf="@id/titleMonth1"
                                app:layout_constraintEnd_toEndOf="@id/titleMonth1"
                                app:layout_constraintStart_toStartOf="@id/titleMonth1"
                                app:layout_constraintTop_toTopOf="@id/titleMonth1" />

                            <TextView
                                android:id="@+id/txtMonthsVal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/rounded_bg_stroke_4"
                                android:elevation="-1dp"
                                android:fontFamily="@font/gilroy_semibold"
                                android:gravity="center"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/v2" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clDay1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titleDate1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/cardColorAge"
                                android:fontFamily="@font/gilroy_semibold"
                                android:paddingHorizontal="4dp"
                                android:text="Date"
                                android:textColor="@color/blue"
                                android:textSize="10sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/v1"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                app:layout_constraintBottom_toBottomOf="@id/titleDate1"
                                app:layout_constraintEnd_toEndOf="@id/titleDate1"
                                app:layout_constraintStart_toStartOf="@id/titleDate1"
                                app:layout_constraintTop_toTopOf="@id/titleDate1" />

                            <TextView
                                android:id="@+id/txtDaysVal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/rounded_bg_stroke_4"
                                android:elevation="-1dp"
                                android:fontFamily="@font/gilroy_semibold"
                                android:gravity="center"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/v1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/gilroy_semibold"
                    android:paddingHorizontal="16dp"
                    android:text="Your Next Birthday"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/cardColorAge"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clYearNext"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titleMonthsNext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/cardColorAge"
                                android:fontFamily="@font/gilroy_semibold"
                                android:paddingHorizontal="4dp"
                                android:text="Months"
                                android:textColor="@color/blue"
                                android:textSize="10sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/vNext"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                app:layout_constraintBottom_toBottomOf="@id/titleMonthsNext"
                                app:layout_constraintEnd_toEndOf="@id/titleMonthsNext"
                                app:layout_constraintStart_toStartOf="@id/titleMonthsNext"
                                app:layout_constraintTop_toTopOf="@id/titleMonthsNext" />

                            <TextView
                                android:id="@+id/txtMonthsValNext"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/rounded_bg_stroke_4"
                                android:elevation="-1dp"
                                android:fontFamily="@font/gilroy_semibold"
                                android:gravity="center"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/vNext" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clDayNext"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/titleDaysNext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/cardColorAge"
                                android:fontFamily="@font/gilroy_semibold"
                                android:paddingHorizontal="4dp"
                                android:text="Days"
                                android:textColor="@color/blue"
                                android:textSize="10sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/vNext1"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                app:layout_constraintBottom_toBottomOf="@id/titleDaysNext"
                                app:layout_constraintEnd_toEndOf="@id/titleDaysNext"
                                app:layout_constraintStart_toStartOf="@id/titleDaysNext"
                                app:layout_constraintTop_toTopOf="@id/titleDaysNext" />

                            <TextView
                                android:id="@+id/txtDaysValNext"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/rounded_bg_stroke_4"
                                android:elevation="-1dp"
                                android:fontFamily="@font/gilroy_semibold"
                                android:gravity="center"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/vNext1" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/gilroy_semibold"
                    android:paddingHorizontal="16dp"
                    android:text="Extra Information"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/cardColorAge"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clYearsTotal"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/txtYearsTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/cardColorAge"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:paddingHorizontal="4dp"
                                    android:text="Years"
                                    android:textColor="@color/blue"
                                    android:textSize="10sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/vYearsTotal"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    app:layout_constraintBottom_toBottomOf="@id/txtYearsTotal"
                                    app:layout_constraintEnd_toEndOf="@id/txtYearsTotal"
                                    app:layout_constraintStart_toStartOf="@id/txtYearsTotal"
                                    app:layout_constraintTop_toTopOf="@id/txtYearsTotal" />

                                <TextView
                                    android:id="@+id/txtYearsValTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="6dp"
                                    android:background="@drawable/rounded_bg_stroke_4"
                                    android:elevation="-1dp"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/vYearsTotal" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clMonthsTotal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/titleMonthsTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/cardColorAge"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:paddingHorizontal="4dp"
                                    android:text="Months"
                                    android:textColor="@color/blue"
                                    android:textSize="10sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/vMonthsTotal"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    app:layout_constraintBottom_toBottomOf="@id/titleMonthsTotal"
                                    app:layout_constraintEnd_toEndOf="@id/titleMonthsTotal"
                                    app:layout_constraintStart_toStartOf="@id/titleMonthsTotal"
                                    app:layout_constraintTop_toTopOf="@id/titleMonthsTotal" />

                                <TextView
                                    android:id="@+id/txtMonthsValTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="6dp"
                                    android:background="@drawable/rounded_bg_stroke_4"
                                    android:elevation="-1dp"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/vMonthsTotal" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clWeeksTotal"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/txtWeeksTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/cardColorAge"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:paddingHorizontal="4dp"
                                    android:text="Weeks"
                                    android:textColor="@color/blue"
                                    android:textSize="10sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/vWeeksTotal"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    app:layout_constraintBottom_toBottomOf="@id/txtWeeksTotal"
                                    app:layout_constraintEnd_toEndOf="@id/txtWeeksTotal"
                                    app:layout_constraintStart_toStartOf="@id/txtWeeksTotal"
                                    app:layout_constraintTop_toTopOf="@id/txtWeeksTotal" />

                                <TextView
                                    android:id="@+id/txtWeeksValTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="6dp"
                                    android:background="@drawable/rounded_bg_stroke_4"
                                    android:elevation="-1dp"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/vWeeksTotal" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clDaysTotal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/titleDaysTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/cardColorAge"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:paddingHorizontal="4dp"
                                    android:text="Days"
                                    android:textColor="@color/blue"
                                    android:textSize="10sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/vDaysTotal"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    app:layout_constraintBottom_toBottomOf="@id/titleDaysTotal"
                                    app:layout_constraintEnd_toEndOf="@id/titleDaysTotal"
                                    app:layout_constraintStart_toStartOf="@id/titleDaysTotal"
                                    app:layout_constraintTop_toTopOf="@id/titleDaysTotal" />

                                <TextView
                                    android:id="@+id/txtDaysValTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="6dp"
                                    android:background="@drawable/rounded_bg_stroke_4"
                                    android:elevation="-1dp"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/vDaysTotal" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clHoursTotal"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/txtHoursTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/cardColorAge"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:paddingHorizontal="4dp"
                                    android:text="Hours"
                                    android:textColor="@color/blue"
                                    android:textSize="10sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/vHoursTotal"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    app:layout_constraintBottom_toBottomOf="@id/txtHoursTotal"
                                    app:layout_constraintEnd_toEndOf="@id/txtHoursTotal"
                                    app:layout_constraintStart_toStartOf="@id/txtHoursTotal"
                                    app:layout_constraintTop_toTopOf="@id/txtHoursTotal" />

                                <TextView
                                    android:id="@+id/txtHoursValTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="6dp"
                                    android:background="@drawable/rounded_bg_stroke_4"
                                    android:elevation="-1dp"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/vHoursTotal" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clMinutesTotal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="16dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/titleMinutesTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/cardColorAge"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:paddingHorizontal="4dp"
                                    android:text="Minutes"
                                    android:textColor="@color/blue"
