                                    android:id="@+id/vMinutesTotal"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    app:layout_constraintBottom_toBottomOf="@id/titleMinutesTotal"
                                    app:layout_constraintEnd_toEndOf="@id/titleMinutesTotal"
                                    app:layout_constraintStart_toStartOf="@id/titleMinutesTotal"
                                    app:layout_constraintTop_toTopOf="@id/titleMinutesTotal" />

